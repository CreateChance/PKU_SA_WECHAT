<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_texture"
    android:orientation="vertical" >

    <TextView
        style="@style/A1_Font"
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:background="@drawable/chat_title_bg_repeat"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="表情翻页效果设置" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/shape_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:text="请选择一个表情翻页效果"
            android:textColor="@android:color/black"
            android:textSize="20.0sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/shape_line" />

        <com.way.wheel.WheelView
            android:id="@+id/face_effect"
            android:layout_width="200dip"
            android:layout_height="150dip"
            android:layout_gravity="center"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/shape_line" />

        <Button
            android:id="@+id/face_effect_btn"
            style="@style/RedGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20.0dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/common_btn_red"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:text="确 定" />
    </LinearLayout>

</LinearLayout>